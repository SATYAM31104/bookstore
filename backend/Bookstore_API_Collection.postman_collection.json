{
  "info": {
    "name": "Bookstore API Collection",
    "description": "Complete API collection for MERN Bookstore Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "bookId",
      "value": ""
    },
    {
      "key": "addressId",
      "value": ""
    },
    {
      "key": "reviewId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": [""]
        }
      }
    },
    {
      "name": "2. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "3. Login User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('token', response.token);",
              "    console.log('Token saved:', response.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "4. Get Books (Bestsellers)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.books && response.books.length > 0) {",
              "        pm.collectionVariables.set('bookId', response.books[0].googleBookId);",
              "        console.log('Book ID saved:', response.books[0].googleBookId);",
              "    }",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books",
          "host": ["{{baseUrl}}"],
          "path": ["books"]
        }
      }
    },
    {
      "name": "5. Search Books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books/search?q=javascript",
          "host": ["{{baseUrl}}"],
          "path": ["books", "search"],
          "query": [
            {
              "key": "q",
              "value": "javascript"
            }
          ]
        }
      }
    },
    {
      "name": "6. Add Address",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('addressId', response.address._id);",
              "    console.log('Address ID saved:', response.address._id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"street\": \"123 Main Street\",\n  \"city\": \"New York\",\n  \"state\": \"NY\",\n  \"pincode\": \"10001\",\n  \"phone\": \"1234567890\",\n  \"isDefault\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/addresses",
          "host": ["{{baseUrl}}"],
          "path": ["addresses"]
        }
      }
    },
    {
      "name": "7. Get All Addresses",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/addresses",
          "host": ["{{baseUrl}}"],
          "path": ["addresses"]
        }
      }
    },
    {
      "name": "8. Add Item to Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bookId\": \"{{bookId}}\",\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/cart/add",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "add"]
        }
      }
    },
    {
      "name": "9. Get Cart",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/cart",
          "host": ["{{baseUrl}}"],
          "path": ["cart"]
        }
      }
    },
    {
      "name": "10. Add Review",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('reviewId', response.review._id);",
              "    console.log('Review ID saved:', response.review._id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bookId\": \"{{bookId}}\",\n  \"rating\": 5,\n  \"comment\": \"Excellent book! Highly recommended for developers.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reviews",
          "host": ["{{baseUrl}}"],
          "path": ["reviews"]
        }
      }
    },
    {
      "name": "11. Get Reviews for Book",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reviews/book/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["reviews", "book", "{{bookId}}"]
        }
      }
    },
    {
      "name": "12. Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"addressId\": \"{{addressId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": ["{{baseUrl}}"],
          "path": ["orders"]
        }
      }
    },
    {
      "name": "13. Get User Orders",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": ["{{baseUrl}}"],
          "path": ["orders"]
        }
      }
    },
    {
      "name": "14. Get Cart (After Order)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/cart",
          "host": ["{{baseUrl}}"],
          "path": ["cart"]
        }
      }
    },
    {
      "name": "Extra: Remove Item from Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/cart/remove/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "remove", "{{bookId}}"]
        }
      }
    },
    {
      "name": "Extra: Clear Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/cart/clear",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "clear"]
        }
      }
    },
    {
      "name": "Extra: Update Review",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rating\": 4,\n  \"comment\": \"Updated review: Good book with practical examples.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reviews/{{reviewId}}",
          "host": ["{{baseUrl}}"],
          "path": ["reviews", "{{reviewId}}"]
        }
      }
    },
    {
      "name": "Extra: Delete Review",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/reviews/{{reviewId}}",
          "host": ["{{baseUrl}}"],
          "path": ["reviews", "{{reviewId}}"]
        }
      }
    }
  ]
}